{
    "name": "arguments-parser",
    "version": "3.0.0",
    "description": "A node arguments parser",
    "main": "arguments-parser.js",
    "type": "module",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint:fix": "eslint . --fix",
        "lint": "eslint .",
        "prettier": "prettier --write .",
        "build:cjs": "rollup --config rollup.config.cjs.js",
        "build:esm": "rollup --config rollup.config.esm.js",
        "build": "rimraf ./dist && npm run build:cjs && npm run build:esm"
    },
    "exports": {
        ".": {
            "require": "./dist/cjs/main.js",
            "import": "./dist/esm/main.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/alexlndn/arguments-parser.git"
    },
    "author": "Alexis Aguirre <alex08lta@gmail.com>",
    "license": "ISC",
    "keywords": [
        "node",
        "argv",
        "arguments",
        "cli",
        "parser"
    ],
    "dependencies": {
        "chalk": "5.3.0"
    },
    "devDependencies": {
        "eslint": "8.46.0",
        "prettier": "3.0.1",
        "rimraf": "5.0.1",
        "rollup": "3.28.0"
    }
}
